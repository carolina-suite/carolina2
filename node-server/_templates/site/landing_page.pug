extends /site/bootstrap_base.pug

block append css
  link(
    href="/static/site/css/cover.bootstrap.css"
    rel="stylesheet"
  )
block body
  .site-wrapper
    .site-wrapper-inner
      .cover-container
        header(class="masthead clearfix")
          .inner 
            
            h3(class="masthead-brand")= config.site.title
            
            nav(class="nav nav-masthead")
              a(class="nav-link active" href="/") Home
              a.nav-link(href="/auth") Account
              a.nav-link(href="https://github.com/jfmario/carolina2") Carolina on GitHub
        
        main(class="inner cover" role="main")
          
          h1.cover-heading= config.site.title
          
          p.lead= config.site.entryText
          p.lead
            a(class="btn btn-lg btn-secondary" href="/main") ENTER
